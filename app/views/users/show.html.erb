<div class="profile-container">
  <h2>Your Profile</h2>

  <div class="profile-avatar">
    <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar, class: "avatar-image" %>
    <% else %>
      <%= image_tag "default-avatar.png", class: "avatar-image" %>
    <% end %><br />
  </div>

  <p class="profile-field"><strong>Name:</strong> <%= @user.full_name %></p>
  <p class="profile-field"><strong>Email:</strong> <%= @user.email %></p>

  <div class="links"><br />
    <% if current_user.admin? || current_user == @user %>
      <%= link_to "Edit Profile", edit_user_registration_path %><br />
    <% end %>
  </div>
</div>
